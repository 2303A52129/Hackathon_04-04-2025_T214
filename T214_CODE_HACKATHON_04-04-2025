      "cell_type": "code",
      "source": [
        "import gradio as gr\n",
        "from tensorflow.keras.models import load_model\n",
        "from tensorflow.keras.preprocessing import image\n",
        "import numpy as np\n",
        "import os\n",
        "model = load_model(\"/content/plant_disease_model.h5\")\n",
        "class_names = os.listdir(\"/content/plant_dataset\")\n",
        "def predict(img):\n",
        "    img = img.resize((224, 224))\n",
        "    img_array = image.img_to_array(img) / 255.0\n",
        "    img_array = np.expand_dims(img_array, axis=0)\n",
        "    prediction = model.predict(img_array)\n",
        "    class_idx = np.argmax(prediction)\n",
        "    return f\"Prediction: {class_names[class_idx]}\"\n",
        "interface = gr.Interface(\n",
        "    fn=predict,\n",
        "    inputs=gr.Image(type=\"pil\"),\n",
        "    outputs=\"text\",\n",
        "    title=\"AI-Driven Plant Disease Predictor\",\n",
        "    description=\"Upload a plant leaf image to predict disease.\"\n",
        ")\n",
        "\n",
        "interface.launch()\n"
      ],
      "metadata": {
        "id": "29quRwLemtBJ"
      },
